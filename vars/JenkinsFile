pipeline {
    agent {label 'maps'}
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                        docker.image('hello-world').pull()
                        echo 'hola'
                }
            }
        }
        stage('Run Docker Image') {
            steps {
                script {
                    docker.image('hello-world').run()
                    def utils = load 'utils.groovy'
                    utils.someFunction()

                }
            }
        }
    }
}
